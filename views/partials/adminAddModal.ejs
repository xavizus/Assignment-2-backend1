<div class="modal" id="addRestaurantsModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <form id="addRestaurantsForm" class="needs-validation" method="post" novalidate></form>
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <input id="addRestaurantName" type="text" class="form-control" required>
                </h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                    <div class="form-group">
                        <label for="addCountry">Country</label>
                        <input id="addCountry" type="text" class="form-control" name="addCountry" required>
                        <div class="invalid-feedback">
                            You need to have a country
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <label for="addCity">City</label>
                        <input id="addCity" type="text" class="form-control" name="addCity" required>
                        <div class="invalid-feedback">
                            You need to have a city
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <label for="addAddress">Address</label>
                        <input id="addAddress" type="text" class="form-control" name="addAddress" required>
                        <div class="invalid-feedback">
                            You need to have a address
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                    <div class="form-group">
                        <div id="addGeners" class="list-group">
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Add restaurant</button>
                    </div>
            </div>
        </div>
    </form>
    </div>
</div>