<!DOCTYPE html>
<html>

<head>
    <% include ./partials/header %>
</head>

<body>
    <div class="modals">
        <% include ./partials/login %>
        <% include ./partials/adminAddModal %>
        <% include ./partials/adminDeleteModal %>
        <% include ./partials/adminEditModal %>
    </div>
    <div class="container m-auto">
        <div class="row">
            <% include ./partials/navbar %>
        </div>
        <div class="row m-1" id="systemMessages">

        </div>
        <div class="row justify-content-center align-items-center align-items-stretch restaurants-cards">
            <% if(locals.resultObject) { %>
            <% data = resultObject.result %>
            <% for(let i = 0; i < data.length; i++) { %>
            <div class="col-12 col-sm-6 col-lg-4 col-xl-3 mb-2 cardSlot" data-id="<%= data[i].id %>">
                <div class="card" style="width: 250px;">
                    <img src="<%= data[i].avatar %>" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= data[i].restaurantName %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= data[i].genre %></h6>
                        <address>
                            <%= data[i].country %> <br>
                            <%= data[i].city %> <br>
                            <%= data[i].address %> <br>
                        </address>
                        <button class="btn btn-primary editRestaurant" data-toggle="modal" data-target="#editRestaurantModal"
                            data-id="<%= data[i].id %>">Edit</button>
                            <button class="btn btn-danger removeRestaurant float-right" data-toggle="modal" data-target="#deleteRestaurantsModal"
                            data-id="<%= data[i].id %>">Delete</button>
                    </div>
                </div>
            </div>
            <% } %>

            <% } %>
        </div>
    </div>
</body>

</html>