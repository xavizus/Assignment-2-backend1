<!DOCTYPE html>
<html>

<head>
    <% include ./partials/header %>
</head>

<body>
  <% include ./partials/login %>
    <div class="container m-auto">
        <div class="row">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" href="#">Restaurants Reviews</a>
                <div class="collapse navbar-collapse" id="navbarNav">
                  <ul class="navbar-nav">
                    <li class="nav-item active">
                      <a class="nav-link" href="#">Home <span class="sr-only">(current)</span></a>
                    </li>
                    <li class="nav-item">
                      <button class="btn btn-primary" data-toggle="modal" data-target="#loginModal">Login</button>
                    </li>
                  </ul>
                </div>
              </nav>
        </div>
        <div class="row justify-content-center align-items-center align-items-stretch">
            <% if(locals.resultObject) { %>
                <% data = resultObject.result %>
                <% for(let i = 0; i < data.length; i++) { %>
                    <div class="col-12 col-sm-6 col-lg-4 col-xl-3 mb-2">
                        <div class="card" style="width: 250px;">
                            <img src="<%= data[i].avatar %>" class="card-img-top" alt="...">
                            <div class="card-body">
                                <h5 class="card-title"><%= data[i].restaurantsName %></h5>
                                <address>
                                    <%= data[i].country %> <br>
                                    <%= data[i].city %> <br>
                                    <%= data[i].address %> <br>
                                </address>
                            </div>
                          </div>
                    </div>
                <% } %>
            
            <% } %>
        </div>
    </div>
    <div class="ratings">
        <form action="/postRating" method="post">
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
            <span class="fa fa-star"></span>
        </form>
    </div>
</body>

</html>